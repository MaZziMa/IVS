# Environment Variables
# Copy this file to .env and fill in your AWS credentials

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# AWS Cognito Configuration
COGNITO_USER_POOL_ID=your_user_pool_id
COGNITO_CLIENT_ID=your_client_id
COGNITO_REGION=us-east-1

# DynamoDB Configuration
DYNAMODB_STREAMS_TABLE=ivs_streams
DYNAMODB_USERS_TABLE=ivs_users

# AWS IVS Configuration
IVS_CHANNEL_ARN=your_ivs_channel_arn
IVS_STREAM_KEY=your_ivs_stream_key
IVS_PLAYBACK_URL=your_ivs_playback_url

# Server Configuration
PORT=3000