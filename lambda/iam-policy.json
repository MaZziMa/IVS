{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "CloudWatchLogsPermissions",
      "Effect": "Allow",
      "Action": [
        "logs:CreateLogGroup",
        "logs:CreateLogStream",
        "logs:PutLogEvents"
      ],
      "Resource": "arn:aws:logs:*:*:log-group:/aws/lambda/ivs-chat-profanity-filter:*"
    },
    {
      "Sid": "IVSChatPermissions",
      "Effect": "Allow",
      "Action": [
        "ivschat:SendEvent",
        "ivschat:DisconnectUser"
      ],
      "Resource": "*"
    }
  ]
}
